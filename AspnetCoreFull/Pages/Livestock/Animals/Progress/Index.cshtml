@page
@model AspnetCoreFull.Pages.Livestock.Animals.Progress.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Animal progress log</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
              @Html.DisplayNameFor(model => model.AnimalProgress[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalProgress[0].AnimalProgressType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalProgress[0].Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalProgress[0].Animal.EarTag)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AnimalProgress) {
        <tr>
            <td>
              @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnimalProgressType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Animal.EarTag)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
