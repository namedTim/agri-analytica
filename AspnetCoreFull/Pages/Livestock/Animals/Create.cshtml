@page
@model AspnetCoreFull.Pages.Livestock.Animals.CreateModel

@{
    ViewData["Title"] = "Create";
}


<h4>Animal entry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
